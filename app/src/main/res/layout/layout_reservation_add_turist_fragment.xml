<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentContainer"
    android:background="@drawable/radius_bg_twelve"
    android:padding="16dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_turist_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/b4"
            android:layout_weight="1"
            android:text="adsasdadsd"/>

            <ImageButton
                android:id="@+id/btn_add_client"
                android:layout_width="@dimen/b4"
                android:layout_height="@dimen/b4"
                android:foreground="@drawable/plus"
                android:backgroundTint="@color/btn_color"
                android:layout_alignParentRight="true"
                android:background="@drawable/square_button"/>

    </LinearLayout>


</RelativeLayout>